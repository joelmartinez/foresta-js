{
  "name": "foresta",
  "version": "1.0.0",
  "description": "Selector engine for JavaScript syntax trees. Write queries against abstract syntax trees generated by Esprima.",
  "main": "dist/foresta.js",
  "module": "dist/foresta.esm.js",
  "browser": "dist/foresta.umd.js",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist/",
    "prepare": "npm run clean && npm run build"
  },
  "keywords": [
    "ast",
    "syntax-tree",
    "esprima",
    "javascript",
    "parser",
    "selector",
    "query"
  ],
  "author": "Joel Martinez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joelmartinez/foresta-js.git"
  },
  "bugs": {
    "url": "https://github.com/joelmartinez/foresta-js/issues"
  },
  "homepage": "https://github.com/joelmartinez/foresta-js#readme",
  "dependencies": {
    "esprima": "^4.0.1"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.6",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rollup": "^4.46.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
